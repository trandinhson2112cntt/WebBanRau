@model WebBanRauProject.Models.QuanLyGoiYMonAn

@{
    ViewBag.Title = "SuaMonAn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>SuaMonAn</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MASO)

        <div class="form-group">
            @Html.LabelFor(model => model.TENMONAN, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div style="font:18px; padding: 5px 0 0 5px"> @Model.TENMONAN</div>

            </div>
        </div>
    </div>



        <div class="form-group">
             @Html.LabelFor(model => model.MOTA, new { @class = "control-label col-md-2" })
             <div class="col-md-10">
                 <textarea name="MOTA">@Model.MOTA</textarea>
             </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HINHANH, new { @class = "control-label col-md-2" })
            <div class="col-md-10">chọn ảnh mới
            <input type="file" name="fileUpload"/>
            <img src="@Url.Content("~/Inmage/~"+Model.HINHANH)" width="120px" />

            </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "MonAn")
</div>
